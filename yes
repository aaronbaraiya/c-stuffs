//function making below main, declration above main

#include <iostream>
using namespace std;

void funcOne(string fname);
void funcTwo(string day, int year);

int main() {

  funcOne("James");
  funcOne("BOB");

  funcTwo("jan", 2023);
  funcTwo("jan", 1985);
  
  return 0;
}

void funcOne(string fname) {
  cout << fname << endl;
}

void funcTwo(string day, int year) {
  cout << day << "  " << year << endl;
}


//array parameter function

#include <iostream>
using namespace std;

void arrayFunc(int myNum[4]) {
  for(int i = 0; i < 4; i++) {
    cout << " " << myNum[i];
  }
}


int main() {

  int numbers[4] = {0, 1, 2, 3};

  arrayFunc(numbers);
  
  return 0;
}



//messing with the above
#include <iostream>
using namespace std;

void arrayFunc(int myNum[4]) {
  for(int i = 0; i < 4; i++) {
    if(i == 2) {
      cout << "i =" << i;
    }
  }
}


int main() {

  int numbers[4] = {0, 1, 2, 3};

  arrayFunc(numbers);
  
  return 0;
}
